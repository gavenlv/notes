# Flask-AppBuilder 应用环境变量配置示例

# 应用配置
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_APP=run.py
FLASK_ENV=development
FLASK_CONFIG=development

# 数据库配置
DATABASE_URL=postgresql://flaskuser:flaskpass@localhost:5432/flaskdb
SQLALCHEMY_DATABASE_URI=postgresql://flaskuser:flaskpass@localhost:5432/flaskdb

# Redis配置（用于会话和缓存）
REDIS_URL=redis://localhost:6379/0

# 邮件配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# 文件上传配置
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# 安全配置
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# 日志配置
LOG_LEVEL=DEBUG
LOG_FILE=/var/log/flask-appbuilder/app.log
LOG_FORMAT=%(asctime)s %(levelname)s %(name)s %(message)s

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=900  # 15分钟
JWT_REFRESH_TOKEN_EXPIRES=86400  # 24小时

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 应用特定配置
APP_NAME=Flask-AppBuilder Application
APP_THEME=default