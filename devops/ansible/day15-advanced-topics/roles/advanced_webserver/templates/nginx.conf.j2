# {{ ansible_managed }}

user {{ webserver_user }};
worker_processes {{ webserver_worker_processes }};
error_log {{ webserver_error_log }};
pid /run/nginx.pid;

events {
    worker_connections {{ webserver_worker_connections }};
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log {{ webserver_access_log }} main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   {{ webserver_keepalive_timeout }};
    types_hash_max_size 2048;

    {% if webserver_gzip_enabled %}
    gzip on;
    gzip_comp_level {{ webserver_gzip_comp_level }};
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml;
    {% endif %}

    include /etc/nginx/conf.d/*.conf;
    
    {% if ansible_os_family == "Debian" %}
    include /etc/nginx/sites-enabled/*;
    {% endif %}
}