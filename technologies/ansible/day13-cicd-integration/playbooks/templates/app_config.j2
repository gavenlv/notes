# Application Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

[app]
name = {{ app_name }}
version = {{ app_version }}
port = {{ app_port }}
debug = false

[database]
host = {% if environment == "production" %}prod-db.example.com{% else %}staging-db.example.com{% endif %}
port = 5432
name = {{ app_name }}_db
user = {{ app_name }}_user
password = {{ db_password | default('') }}

[logging]
level = {% if environment == "production" %}WARNING{% else %}INFO{% endif %}
file = /var/log/{{ app_name }}/app.log
max_size = 10MB
backup_count = 5

[security]
secret_key = {{ secret_key | default('') }}
allowed_hosts = {{ allowed_hosts | default('localhost') }}